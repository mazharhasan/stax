<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     xmlns:tools="http://schemas.android.com/tools">
    
 <LinearLayout
           
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:weightSum="3.5" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:background="#5C5C5C"
                android:baselineAligned="false"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    tools:ignore="UselessParent" >

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="umair ahmed"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="umair ahmed"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="0.2"
                    android:background="#5C5C5C"
                    tools:ignore="NestedWeights" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="P"
                        android:textColor="@android:color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.8"
                    android:background="@drawable/end_journey_popup_hover_effect" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        tools:ignore="UselessParent" >

                        <TextView
                            android:id="@+id/pick_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Tue: 19 Nov 2013 9:30 AM"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/pick_loc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/pick_time"
                            android:padding="5dp"
                            android:text="Shadman Town, North Nazimabad"
                            android:textColor="@android:color/black" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="0.2"
                    android:background="#5C5C5C"
                    tools:ignore="NestedWeights" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="D"
                        android:textColor="@android:color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.8"
                    android:background="@drawable/end_journey_popup_hover_effect" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        tools:ignore="UselessParent" >

                        <TextView
                            android:id="@+id/dep_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Tue: 19 Nov 2013 10:30 AM"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/dep_loc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/dep_time"
                            android:padding="5dp"
                            android:text="Haydri Market"
                            android:textColor="@android:color/black" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2.0" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1.5"
                    android:background="@drawable/end_journey_popup_hover_effect"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:weightSum="1.0"
                    tools:ignore="NestedWeights" >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:hint="please enter fare"
                        android:inputType="text" />

                    <Button
                        android:id="@+id/textBtn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/button_confirm_end_journey"
                        android:text="confirm end journey"
                        android:textColor="#ffffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.5"
                    android:background="@android:color/darker_gray"
                    android:orientation="vertical"
                    android:weightSum="2.0" >

                    <RelativeLayout
                        android:id="@+id/tip"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/end_journey_popup_hover_effect" >

                        <TextView
                            android:id="@+id/tip_key"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Tip :"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tip_value"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tip_key"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="50.00%"
                            android:textColor="@android:color/black"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/tax"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/end_journey_popup_hover_effect" >

                        <TextView
                            android:id="@+id/tax_key"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Tax :"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tax_value"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tax_key"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="0"
                            android:textColor="@android:color/black" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    
    
</LinearLayout>
