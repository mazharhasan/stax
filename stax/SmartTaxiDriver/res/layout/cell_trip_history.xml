<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:weightSum="6" >

        <RelativeLayout
            android:id="@+id/layoutItem"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5.5"
            android:background="#757575"
            android:paddingLeft="4dp" >

            <LinearLayout
                android:id="@+id/maincom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#757575"
                android:orientation="vertical"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/txtPassengerName"
                    style="@style/TextStylePlain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ahbab Sami"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCorporate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amani System"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/maincom"
                android:gravity="right" >

                <ImageView
                    android:id="@+id/img_airport"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/trip_detail_top_bar_icon"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="0.5"
            android:background="#f0f0f0"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fare"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtFareAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="$ 80.00"
                android:textColor="#000"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:weightSum="7" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="1dp"
            android:layout_weight="1.5"
            android:adjustViewBounds="true"
            android:background="#9D9C9A"
            android:cropToPadding="true"
            android:gravity="center|center_horizontal"
            android:text="P"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtPickUpDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="2013-11-29 00:00:24"
                android:textColor="#000" />

            <TextView
                android:id="@+id/txtPassLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Johar Chowrangi Road Karachi 75290"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="0.5"
            android:background="#f0f0f0"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="Tip"
                android:textColor="#000"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtTipAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="$ 62.00"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:weightSum="7" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="1dp"
            android:layout_weight="1.5"
            android:adjustViewBounds="true"
            android:background="#9D9C9A"
            android:cropToPadding="true"
            android:gravity="center|center_horizontal"
            android:text="D"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtDropToDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="2013-11-29 00:00:24"
                android:textColor="#000" />

            <TextView
                android:id="@+id/txtDriverLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Abul Asar Hafeez Jalandhri Road Karachi 75290"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="0.5"
            android:background="#f0f0f0"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="Total"
                android:textColor="#000"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtDriverAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 142.00"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>